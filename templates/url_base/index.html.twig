{% extends 'base.html.twig' %}

{% block title %}UrlBase index{% endblock %}

{% block body %}
    <h1>UrlBase index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BaseUrl</th>
                <th>GeneratedUrl</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for url_base in url_bases %}
            <tr>
                <td>{{ url_base.id }}</td>
                <td>{{ url_base.baseUrl }}</td>
                <td>{{ url_base.generatedUrl }}</td>
                <td>
                    <a href="{{ path('url_base_show', {'id': url_base.id}) }}">show</a>
                    <a href="{{ path('url_base_edit', {'id': url_base.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('url_base_new') }}">Create new</a>
{% endblock %}
